generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("MONGODB_URI")
}
model Banner {
  id      String  @id @default(auto()) @map("_id") @db.ObjectId
  owner   String
  img     String
  title   String
  website String
}



model Skyad {
  id      String  @id @default(auto()) @map("_id") @db.ObjectId
  owner   String
  img     String
  title   String
  website String
}

model Event {
  id      String  @id @default(auto()) @map("_id") @db.ObjectId
  owner   String
  img     String
  title   String
  website String
}

model Map {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  created    DateTime @db.Date @default(now())
  desc       String?
  floormap   String?
  img        String?
  interior   String?
  likes      Int  @default(0)
  owner      String?
  ownerEmail String?
  title      String?
  userLimit  Int  @default(10)
}

